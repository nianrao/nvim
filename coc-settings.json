{
  "explorer.width": 30,
  "explorer.icon.enableNerdfont": true,
  "explorer.previewAction.onHover": false,
  "explorer.keyMappings": {
    "<cr>": ["expandable?", "expand", "open"],
    "v": "open:vsplit"
  },

  "snippets.userSnippetsDirectory": "~/.config/nvim/snips",

  "languageserver": {
    "hdlChecker": {
      "command": "hdl_checker",
      "args": [
        "--lsp"
      ],
      "filetypes": [
        "vhdl",
        "verilog",
        "systemverilog"
      ]
    }
  }
}
